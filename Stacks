#include <iostream>
#include <stack> 
using namespace std;

int main() {
    stack<int> myStack;  

    
    myStack.push(10);
    myStack.push(20);
    myStack.push(30);

    cout << "Stack elements: ";
   
    while (!myStack.empty()) {
        cout << myStack.top() << " ";
        myStack.pop(); 
    }
    cout << endl;

   
    cout << "Is stack empty? " << (myStack.empty() ? "Yes" : "No") << endl;

    myStack.push(40); 
    cout << "Top element: " << myStack.top() << endl;
    cout << "Stack size: " << myStack.size() << endl;

    return 0;
}
